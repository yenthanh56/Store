<div class="slider">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-indicators">
            <img data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active img-children"
                aria-current="true" aria-label="Slide 1" src="{{stores.imageinside1}}" />
            <img data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" class="img-children"
                aria-label="Slide 2" src='{{stores.imageinside2}}' />
            <img data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" class="img-children"
                aria-label="Slide 3" src='{{stores.imageinside3}}' />
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{stores.imageinside1}}" class="d-block w-30" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{stores.imageinside2}}" class="d-block w-30" alt="...">

            </div>
            <div class="carousel-item">
                <img src="{{stores.imageinside3}}" class="d-block w-30" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


</div>
</div>